<!--pages/add-card/add-card.wxml-->
<form bindsubmit='formSubmit' bindreset="formReset">
<van-cell-group>
  <van-field label="卡片名称" type="text" name="name" placeholder="请输入卡片名称"/>
  <van-field label="卡片额度" type="number" name="cardLimit" placeholder="请输入卡片额度"/>
  <van-field label="账单日" type="number" name="billDay" placeholder="请输入账单日"/>
  
  <i-cell title="还款日类型">
        <i-switch name="repayDayType" value="{{switch1}}" size="large" bind:change="switchChange" slot="footer">
            <view slot="open">固定</view>
            <view slot="close">延后</view>
        </i-switch>
    </i-cell>
  <van-field label="还款日记数" type="number" name="repayDayNum" value="{{ value }}" placeholder="请输入还款日"/>
</van-cell-group>
<view class="btn-area">
    <button formType="submit">Submit</button>
    <button formType="reset">Reset</button>
  </view>
</form>
<i-button bind:click="save" type='primary'>保存</i-button>

<i-button bind:click="multipleSave" type='primary'>批量添加5个</i-button>

    
